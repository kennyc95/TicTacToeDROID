<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kenny.tictactoe.MainActivity"
    android:id="@+id/Main">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/A2"
        android:layout_marginTop="185dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/A3"
        android:layout_alignStart="@+id/A3"
        android:onClick="playerClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/A3"
        android:layout_below="@+id/A2"
        android:layout_toLeftOf="@+id/B3"
        android:layout_toStartOf="@+id/B3"
        android:onClick="playerClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/A1"
        android:layout_above="@+id/B2"
        android:layout_toLeftOf="@+id/B2"
        android:layout_toStartOf="@+id/B2"
        android:onClick="playerClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/B2"
        android:layout_alignTop="@+id/A2"
        android:layout_centerHorizontal="true"
        android:onClick="playerClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/B3"
        android:layout_alignTop="@+id/A3"
        android:layout_centerHorizontal="true"
        android:onClick="playerClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/C1"
        android:layout_alignTop="@+id/A1"
        android:layout_alignLeft="@+id/C2"
        android:layout_alignStart="@+id/C2"
        android:onClick="playerClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/C2"
        android:layout_below="@+id/C1"
        android:layout_alignLeft="@+id/C3"
        android:layout_alignStart="@+id/C3"
        android:onClick="playerClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/C3"
        android:layout_below="@+id/C2"
        android:layout_toRightOf="@+id/B2"
        android:layout_toEndOf="@+id/B2"
        android:onClick="playerClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/B1"
        android:layout_above="@+id/B2"
        android:layout_centerHorizontal="true"
        android:onClick="playerClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_below="@+id/A3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:onClick="beginGame"/>
</RelativeLayout>
